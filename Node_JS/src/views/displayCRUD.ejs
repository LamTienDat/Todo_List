<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>get CRUD</title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      a.btn-edit {
        height: 27px;
        background: beige;
        padding: 5px;
        border-radius: 3px;
        cursor: pointer;
      }
      a.btn-delete {
        height: 27px;
        background: rgb(233, 65, 65);
        padding: 5px;
        border-radius: 3px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h2>HTML Table</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%= dataTable[i].id %>"
            class="btn-edit"
            type=""
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%= dataTable[i].id %>"
            class="btn-delete"
            type=""
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
